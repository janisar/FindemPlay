# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

POST    /saveObject                 controllers.Application.saveObject
GET     /getFindemObjects           controllers.Application.getObjects
POST    /login                      controllers.LoginController.login
POST    /register                   controllers.LoginController.register
POST    /saveFile/:id               controllers.FileController.saveFile(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

